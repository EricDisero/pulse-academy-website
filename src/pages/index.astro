---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section1AboveTheFold from '../components/Section1AboveTheFold.astro';
import LabelLogosMarquee from '../components/LabelLogosMarquee.astro';
import Section2ProblemAgitateSolve from '../components/Section2ProblemAgitateSolve.astro';
import Section3WhoThisIsFor from '../components/Section3WhoThisIsFor.astro';
import SectionAISplitter from '../components/SectionAISplitter.astro';
import Section4ProprietaryMethod from '../components/Section4ProprietaryMethod.astro';
import Section5SocialProof from '../components/Section5SocialProof.astro';
import Section6Comparison from '../components/Section6Comparison.astro';
import Section7Offer from '../components/Section7Offer.astro';
import Section8Instructor from '../components/Section8Instructor.astro';
import Section9FullProgramOverview from '../components/Section9FullProgramOverview.astro';
import Section10FinalCTA from '../components/Section10FinalCTA.astro';
import Section11FAQ from '../components/Section11FAQ.astro';
import Footer from '../components/Footer.astro';
import StatsSection from '../components/StatsSection.astro';
import OscarSuccessStory from '../components/OscarSuccessStory.astro';
import QuickTestimonial from '../components/QuickTestimonial.astro';
import IndustryEndorsements from '../components/IndustryEndorsements.astro';
---

<Layout title="Pulse Academy - Transform Your Mixes">
	<Header />
	<main class="space-y-0 md:space-y-0">
		<!-- Connected top sections -->
		<div class="connected-sections">
			<Section1AboveTheFold />
			<LabelLogosMarquee />
			
					<!-- Industry Recognition after hero -->
		<IndustryEndorsements />
			
			<Section2ProblemAgitateSolve />
			<StatsSection />
			<Section3WhoThisIsFor />
		</div>
		
		<!-- Oscar's success story positioned strategically -->
		<div class="bg-gradient-to-b from-[#0c0c18] to-[#080810]">
			<OscarSuccessStory />
		</div>
		
		<!-- AI Technology section -->
		<div class="connected-sections mt-0">
			<SectionAISplitter />
		</div>
		
		<!-- Method and testimonials connected -->
		<div class="connected-sections mt-0">
			<Section4ProprietaryMethod />
			
			<!-- Another strategic testimonial after method explanation -->
			<div class="px-4 md:px-8 py-8 bg-gradient-to-b from-[#0a0a15] to-[#080810]">
				<div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6">
					<QuickTestimonial 
						name="Ben"
						photo="/student-photos/Ben.webp"
						role="Producer • Course Graduate"
						testimonial="I have a girl come in, reference the track that she wanted. And I literally only did like one or two EQ moves and it was just perfect. I've never experienced that before."
						outcome="Perfect results with minimal adjustments using the reference system"
						compact={true}
					/>
					<QuickTestimonial 
						name="Jerry"
						photo="/student-photos/Jerry.webp"
						role="Producer & Ableton Certified Trainer"
						testimonial="It's so clear what's happening now, where before I would kind of guess. This is giving me concrete and definitive direction for mixing and creating my tracks."
						outcome="From guessing to knowing exactly what to do"
						compact={true}
					/>
				</div>
			</div>
			
			<Section5SocialProof />
		</div>
		
		<!-- Rest of sections with visual separators -->
		<div class="connected-sections with-separators mt-0">
			<Section6Comparison />
			
			<!-- Final strategic testimonial before offer -->
			<div class="px-4 md:px-8 py-8 bg-gradient-to-b from-[#080810] to-[#0c0c18]">
				<div class="max-w-3xl mx-auto">
					<QuickTestimonial 
						name="Tim Lock"
						photo="/student-photos/Tim Lockyer bw.webp"
						role="Electronic Producer • House Husband"
						testimonial="It literally took me two weeks to make probably a two year, maybe three year improvement that would have taken me five years without this course. I thought there's no way I won't have to tweak it after. I turned the volume back on and I was in shock - it was literally perfect."
						outcome="2-3 years of improvement achieved in just 2 weeks"
						compact={false}
					/>
				</div>
			</div>
			
			<Section7Offer />
			<Section8Instructor />
			<Section9FullProgramOverview />
			<Section10FinalCTA />
			<Section11FAQ />
		</div>
	</main>
	<Footer />
</Layout>

<style>
	.connected-sections {
		display: flex;
		flex-direction: column;
	}
	.connected-sections > :global(*) {
		/* Allow sections to define their own margins and padding primarily */
		/* The goal of connected-sections is more about logical grouping than strict style overrides */
	}

	/* Remove the specific .with-separators adjustments as they are no longer needed without the lines */
</style> 