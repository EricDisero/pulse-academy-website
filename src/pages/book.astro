---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Book Your Free Track Analysis - Pulse Academy">
    <div class="min-h-screen bg-gradient-to-b from-[#050507] to-[#0a0a15] py-8 px-4">
        <div class="max-w-2xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <a href="/" class="inline-flex items-center text-pulse-cyan hover:text-pulse-purple transition-colors mb-6">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Main Page
                </a>
                
                <h1 class="text-2xl md:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pulse-purple to-pulse-cyan mb-4 pb-1 leading-normal">
                    Book Your 'Instant Song Upgrade' Session
                </h1>
                
                <p class="text-gray-300 mb-2">
                    Complete the form below to secure your spot for a free track analysis session.
                </p>
                
                <div class="bg-green-500/10 border border-green-500/20 rounded-lg p-4 mb-6">
                    <p class="text-green-400 font-semibold text-sm">
                        ✅ $297 Value - Completely Free
                    </p>
                    <p class="text-gray-300 text-xs">
                        Pure insights for your music. Zero sales pressure.
                    </p>
                </div>
            </div>

            <!-- Direct GHL Form Embed -->
            <div class="bg-[#080810]/60 rounded-xl p-4 border border-gray-800/30">
                <iframe 
                    src="https://api.leadconnectorhq.com/widget/survey/6RBmf85SJ0IFIO51kKfd"
                    id="6RBmf85SJ0IFIO51kKfd"
                    style="border:none;width:100%;min-height:600px;" 
                    scrolling="no" 
                    title="Book Your Free Track Analysis"
                    class="rounded-md">
                </iframe>
            </div>

            <!-- Trust Indicators -->
            <div class="mt-8 text-center">
                <div class="flex items-center justify-center mb-4">
                    <div class="flex">
                        <span class="text-yellow-400 text-lg">★★★★★</span>
                    </div>
                    <span class="ml-2 text-sm text-gray-300">4.9 | Based on 127 students</span>
                </div>
                
                <p class="text-xs text-gray-400 max-w-md mx-auto">
                    Join producers who've transformed their tracks with our proven analysis method. 
                    Your session will reveal exactly what separates your productions from chart hits.
                </p>
            </div>
        </div>
    </div>

    <script>
        // Load GHL script for the dedicated page
        const ghlScript = document.createElement('script');
        ghlScript.src = 'https://link.msgsndr.com/js/form_embed.js';
        ghlScript.async = true;
        ghlScript.onload = function() {
            console.log('GHL script loaded on booking page');
        };
        document.head.appendChild(ghlScript);
    </script>
</Layout> 