---
// src/components/Section5SocialProof.astro
const testimonials = [
    {
        source: "Beat Fortress",
        quote: "My mix finally sounds like a real release. Completely night and day.",
        avatarPlaceholder: "BF",
        rating: 5
    },
    {
        source: "Benno",
        quote: "I have a client drooling over a mix purely from using this approach.",
        avatarPlaceholder: "BN",
        rating: 5
    },
    {
        source: "Rudo",
        quote: "Woke up still buzzing that I can do something at this level.",
        avatarPlaceholder: "RD",
        rating: 5
    },
    {
        source: "Taylor",
        quote: "The chord progression analyzer saved me months of trial and error - my songs finally sound rich and professional.",
        avatarPlaceholder: "TY",
        rating: 5
    }
];

const successStories = [
    "Oscar reached 900,000+ monthly listeners in under 12 months",
    "Paul went from 0 to 30,000 monthly listeners in just 3 months",
    "17 of our students have secured major label deals",
    "Combined streams from our community exceed $150M"
];

const studentTestimonials = [
    {
        name: "Alex",
        avatar: "A",
        quote: "After 5 years of hitting the same wall with my productions, I finally saw exactly what was missing in my mixes. I made more progress in 2 weeks than in the previous 2 years."
    }, 
    {
        name: "Oscar",
        avatar: "O",
        subtext: "who went from 3,000 to 900,000 monthly listeners, told me:",
        quote: "The objective analysis changed everything about how I approach production. For the first time, I could see exactly why my tracks weren't matching commercial releases."
    }, 
    {
        name: "Sarah",
        avatar: "S",
        subtext: "who used to spend weeks on a single mix:",
        quote: "I used to never feel satisfied with my mixes. Now I know exactly what to measure, what to listen for, and how to fix issues methodically. My completion rate has tripled."
    }, 
    {
        name: "Marco",
        avatar: "M",
        subtext: "sent me this after his first label signing:",
        quote: "I sent my first track using this method to a label I'd been trying to sign with for years. They responded within hours asking for more music. The difference in quality was that dramatic."
    }
];

// Star SVG
const StarIcon = `
<svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
</svg>
`;
---
<section id="social-proof" class="py-16 md:py-24 bg-gradient-to-b from-[#0a0a15] to-[#080810] px-4 md:px-8">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12 md:mb-16 max-w-3xl mx-auto" data-animate="fade" data-delay="100">
            <h2 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight leading-none">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-pulse-purple to-pulse-cyan">What People Like You Are Saying</span>
            </h2>
        </div>

        <div class="card-gradient p-6 md:p-10 mb-12 md:mb-16 max-w-4xl mx-auto rounded-2xl shadow-glass border border-gray-800/20" data-animate="fade" data-delay="200">
            <h3 class="text-2xl md:text-3xl font-bold text-center text-white mb-6 tracking-tight leading-none">
                "I Made More Progress in 4 Days Than in 5 Years of My Career"
            </h3>
            <div class="aspect-video bg-[#080810] border border-gray-800/40 rounded-lg flex items-center justify-center text-gray-400 overflow-hidden relative group">
                <!-- Video thumbnail with play button overlay -->
                <img src="/video-placeholder.jpg" alt="Video Thumbnail" class="absolute inset-0 w-full h-full object-cover opacity-70 group-hover:opacity-90 transition-opacity" />
                <div class="absolute inset-0 bg-gradient-to-t from-[#050507] to-transparent opacity-60"></div>
                
                <div class="relative z-10 flex flex-col items-center">
                    <div class="w-20 h-20 bg-pulse-purple/20 rounded-full flex items-center justify-center border border-pulse-purple/40 backdrop-blur-lg group-hover:scale-110 transition-all duration-300">
                        <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <p class="mt-4 text-white font-medium">Watch Featured Testimonial</p>
                </div>
            </div>
        </div>

        <div class="mb-16 md:mb-20 max-w-5xl mx-auto" data-animate="fade" data-delay="300">
            <h3 class="text-2xl md:text-3xl font-bold text-center text-white mb-10 tracking-tight leading-none">Unfiltered Feedback</h3>
            
            <div id="testimonial-carousel" class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
                {testimonials.map((testimonial, index) => (
                    <div class="card-gradient p-6 rounded-xl border border-gray-800/20 hover:border-pulse-purple/30 transition-all duration-300 shadow-glass hover:shadow-glow-sm flex flex-col sm:flex-row items-start gap-4 sm:gap-6" data-animate="fade" data-delay={300 + (index * 100)}>
                        <div class="flex-shrink-0 w-14 h-14 rounded-full bg-[#0c0c18] border border-pulse-purple/30 flex items-center justify-center text-white text-lg font-bold mb-4 sm:mb-0 relative overflow-hidden shadow-glow-sm">
                            <div class="absolute inset-0 bg-gradient-to-br from-pulse-purple/20 to-pulse-cyan/20"></div>
                            <span class="relative z-10">{testimonial.avatarPlaceholder}</span>
                        </div>
                        <div class="flex-grow">
                            <div class="flex items-center mb-2">
                                {[...Array(testimonial.rating)].map(() => <Fragment set:html={StarIcon} />)}
                            </div>
                            <blockquote class="text-gray-200 italic mb-3 text-md leading-relaxed">
                                "{testimonial.quote}"
                            </blockquote>
                            <p class="font-semibold text-pulse-purple text-right">- {testimonial.source}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Student Testimonials with Thumbnails -->
        <div class="mb-16 md:mb-20 max-w-4xl mx-auto" data-animate="fade" data-delay="400">
            <h3 class="text-2xl md:text-3xl font-bold text-center text-white mb-8 tracking-tight leading-none">What Our Students Say</h3>
            
            <div class="space-y-6">
                {studentTestimonials.map((testimonial, index) => (
                    <div class="card-gradient p-5 md:p-6 rounded-xl border border-gray-800/20 flex items-start gap-4" data-animate="fade" data-delay={400 + (index * 100)}>
                        <div class="flex-shrink-0 rounded-full overflow-hidden w-12 h-12 border border-pulse-purple/30 flex items-center justify-center relative shadow-glow-sm">
                            <!-- This would be a real image in production -->
                            <div class="absolute inset-0 bg-gradient-to-br from-pulse-purple/20 to-pulse-cyan/20"></div>
                            <span class="text-white font-bold text-lg relative z-10">{testimonial.avatar}</span>
                        </div>
                        <div class="flex-grow">
                            <div class="mb-1.5">
                                <span class="font-semibold text-pulse-purple">{testimonial.name}</span> 
                                {testimonial.subtext && 
                                    <span class="text-gray-400 text-sm">{testimonial.subtext}</span>
                                }
                            </div>
                            <blockquote class="border-l-4 border-pulse-purple pl-4 py-2 italic text-gray-200 bg-[#080810]/50 rounded-r-md shadow-inner-glow">
                                "{testimonial.quote}"
                            </blockquote>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <div class="max-w-3xl mx-auto" data-animate="fade" data-delay="500">
            <h3 class="text-2xl md:text-3xl font-bold text-center text-white mb-8 tracking-tight leading-none">Success Stories</h3>
            <ul class="space-y-5">
                {successStories.map(story => (
                    <li class="card-gradient p-4 md:p-5 rounded-lg text-gray-300 text-lg flex items-center shadow-glass hover:shadow-glow-sm hover:border-pulse-purple/30 border border-gray-800/20 transition-all">
                        <span class="text-pulse-cyan mr-3 text-xl">âœ“</span> {story}
                    </li>
                ))}
            </ul>
        </div>
    </div>
</section>

<script>
    // Placeholder for carousel logic if enhanced later
    const carousel = document.getElementById('testimonial-carousel');
