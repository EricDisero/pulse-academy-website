---
// src/components/Section7Offer.astro
// Student avatars for the 5-star rating display
const studentAvatars = [
    { src: "/student-photos/BigJerr.webp", alt: "BigJerr" },
    { src: "/student-photos/Beatfortress.webp", alt: "Beatfortress" },
    { src: "/student-photos/Elisha.webp", alt: "Elisha" },
    { src: "/student-photos/Kip.webp", alt: "Kip" },
    { src: "/student-photos/1wayout.webp", alt: "1wayout" },
    { src: "/student-photos/DIVOCEAN.webp", alt: "DIVOCEAN" }
];

// Star SVG
const StarIcon = `
<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
</svg>
`;
---
<section id="offer-section" class="py-16 md:py-24 bg-gradient-to-b from-[#080810] to-[#0c0c18] px-4 md:px-8">
    <div class="max-w-3xl mx-auto mb-8">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold tracking-tight leading-tight text-center pb-3">
            <span class="block text-silvery-gradient pb-2 text-xl md:text-2xl lg:text-3xl font-medium">Stop Wondering What You're Missing</span>
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-pulse-purple to-pulse-cyan pb-2 leading-normal">Get Your Free Track Analysis</span>
        </h2>
        <p class="mt-6 text-lg md:text-xl text-gray-300 text-center">
            We'll prove our method works by showing you exactly what separates your tracks from Billboard hits. <strong class="text-white">Completely free.</strong>
        </p>
    </div>

    <!-- Urgency & Scarcity -->
    <div class="max-w-2xl mx-auto mb-8 text-center">
        <div class="bg-red-500/10 border border-red-500/20 rounded-lg p-4">
            <p class="text-red-400 font-semibold mb-2">⚠️ Only <span id="spots-left-offer" class="text-red-400 font-bold">- spots left as of loading...</span> for <span id="user-city-offer" class="text-red-400 font-bold">your area</span></p>
            <p class="text-gray-300 text-sm">These sessions fill up fast. Secure yours now before we're fully booked.</p>
        </div>
    </div>

    <!-- Clean Offer Card -->
    <div class="max-w-2xl mx-auto card-gradient p-8 md:p-10 rounded-2xl shadow-glass border border-gray-800/20">
        <div class="text-center mb-8">
            <h3 class="text-2xl md:text-3xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-pulse-purple to-pulse-cyan mb-6 pb-2 leading-normal">Here's What You Get:</h3>
            
            <!-- Clear Value List -->
            <div class="space-y-4 mb-8 text-left">
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-pulse-purple/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-pulse-purple" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-200 text-lg mb-1"><strong class="text-white">AI Stem Separation Analysis</strong></p>
                        <p class="text-gray-400 text-sm">We analyze your track and a professional reference using our Pulse Cascade Splitter™ to reveal exactly what's different in the mix, chord voicings, and arrangement.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-pulse-purple/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-pulse-purple" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-200 text-lg mb-1"><strong class="text-white">30-Minute Live Session</strong></p>
                        <p class="text-gray-400 text-sm">Screen-share with a professional engineer who shows you the specific changes that will instantly upgrade your track to sound like the pros.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-pulse-purple/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-pulse-purple" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-200 text-lg mb-1"><strong class="text-white">Instant Upgrade Action Plan</strong></p>
                        <p class="text-gray-400 text-sm">Get 3-5 specific changes you can make immediately to transform your track. No guesswork, just the exact adjustments that will make the biggest difference.</p>
                    </div>
                </div>
                
                <div class="flex items-start gap-4">
                    <div class="w-6 h-6 rounded-full bg-pulse-cyan/20 flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-3 h-3 text-pulse-cyan" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-200 text-lg mb-1"><strong class="text-white">Reference Track Stems</strong></p>
                        <p class="text-gray-400 text-sm">Download the separated stems from your reference track so you can study how the pros structure their arrangements and chord progressions.</p>
                    </div>
                </div>
            </div>

            <!-- Value & Price -->
            <div class="bg-[#080810]/60 rounded-xl p-6 mb-8 border border-pulse-purple/20">
                <div class="flex justify-between items-center">
                    <span class="text-lg font-semibold text-gray-300">Normal Value:</span>
                    <div class="text-right">
                        <div class="text-xl text-gray-400 line-through mb-1">$297</div>
                        <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pulse-purple to-pulse-cyan leading-tight">FREE</div>
                    </div>
                </div>
            </div>

            <!-- Guarantee -->
            <div class="bg-green-500/10 border border-green-500/20 rounded-lg p-4 mb-8">
                <p class="text-green-400 font-semibold text-center">
                    <strong>Guaranteed:</strong> You'll get 3 specific, actionable improvements. Zero sales pressure.
                </p>
            </div>

            <!-- CTA Button -->
            <div class="text-center">
                <button id="open-calendar-modal-offer" 
                      class="btn-lg shadow-cta-glow text-lg md:text-xl inline-block font-bold transition-all duration-300 mb-4">
                   CLAIM MY 'INSTANT SONG UPGRADE' SESSION NOW
                </button>
                <p class="text-sm text-gray-400">
                    Takes 2 minutes to book. 30 minutes to transform your music.
                </p>
            </div>
        </div>
        
        <!-- Social Proof -->
        <div class="mt-8 flex flex-col items-center justify-center bg-[#080810]/60 py-4 px-4 rounded-xl border border-gray-800/30">
            <div class="flex items-center justify-center">
                <div class="flex items-center">
                    {[...Array(5)].map(() => <Fragment set:html={StarIcon} />)}
                    <span class="ml-2 text-sm font-semibold text-white">4.9 | Based on 127 students</span>
                </div>
                <div class="flex ml-3 -space-x-3 avatar-group">
                    {studentAvatars.map((avatar, index) => (
                        <div 
                            class="avatar-item w-7 h-7 rounded-full border-2 border-[#070710] overflow-hidden hover:z-10 relative transition-transform duration-200" 
                            style={`z-index: ${6-index}`}
                        >
                            <img src={avatar.src} alt={avatar.alt} class="w-full h-full object-cover" loading="lazy" />
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

    <!-- Calendar Modal -->
    <div id="calendar-modal" class="fixed inset-0 bg-black/80 backdrop-blur-md flex items-center justify-center p-1 md:p-4 z-[100] hidden transition-opacity duration-300 opacity-0">
        <div class="glassmorphism p-2 md:p-6 lg:p-8 rounded-xl max-w-2xl w-full text-center relative shadow-2xl mx-1 md:mx-0">
            <button id="close-calendar-modal" class="absolute top-2 right-2 md:top-4 md:right-4 text-gray-400 hover:text-white transition-colors z-10">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 md:w-8 md:h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            <h3 class="text-lg md:text-2xl font-semibold text-gray-100 mb-2 md:mb-4 px-2">Book Your 'Instant Song Upgrade' Session</h3>
            <p class="text-sm md:text-base text-gray-300 mb-2 md:mb-4 px-2">Complete the form below to secure your spot for a free track analysis session.</p>
            <div id="iframe-container" class="w-full">
                <iframe id="ghl-iframe" style="border:none;width:100%;min-height:500px;" scrolling="no" title="Instant Song Upgrade Session" class="rounded-md"></iframe>
            </div>
        </div>
    </div>
</section>

<style>
    .student-review-avatar {
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        cursor: pointer;
    }
    
    .student-review-avatar:hover {
        border-color: rgba(139, 92, 246, 0.8);
        box-shadow: 0 0 15px rgba(139, 92, 246, 0.5);
    }
    
    /* Avatar hover effects */
    .avatar-item {
        transition: all 0.2s ease;
    }
    
    .avatar-item:hover {
        transform: translateY(-5px) scale(1.15);
    }
    
    .avatar-group:hover .avatar-item:not(:hover) {
        transform: translateY(2px);
    }
    
    /* Mobile-specific iframe styling */
    @media (max-width: 768px) {
        #ghl-iframe {
            min-height: 450px !important;
            border-radius: 8px;
        }
        
        #iframe-container {
            padding: 0;
            margin: 0;
        }
        
        /* Ensure modal takes full mobile width */
        #calendar-modal .glassmorphism {
            margin: 4px;
            max-height: 95vh;
            overflow-y: auto;
        }
        
        /* Hide any potential scrollbars on mobile */
        #calendar-modal .glassmorphism::-webkit-scrollbar {
            display: none;
        }
        
        #calendar-modal .glassmorphism {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    }
</style>

<script>
    const openButtonOffer = document.getElementById('open-calendar-modal-offer');
    const calendarModalInstance = document.getElementById('calendar-modal'); 
    const closeButtonCalendar = document.getElementById('close-calendar-modal');

    if (openButtonOffer && calendarModalInstance) {
        openButtonOffer.addEventListener('click', () => {
            calendarModalInstance.classList.remove('hidden');
            setTimeout(() => {
                calendarModalInstance.classList.add('opacity-100');
                // Load iframe source with mobile-specific handling
                const iframe = document.getElementById('ghl-iframe') as HTMLIFrameElement;
                if (iframe && !iframe.src) {
                    console.log('Loading GHL iframe...');
                    
                    // Detect mobile device
                    const isMobile = window.innerWidth <= 768 || /Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
                    
                    if (isMobile) {
                        // Mobile: Force clean form load with longer delay and cache busting
                        setTimeout(() => {
                            const timestamp = Date.now();
                            iframe.src = `https://api.leadconnectorhq.com/widget/survey/6RBmf85SJ0IFIO51kKfd?t=${timestamp}&mobile=1`;
                            iframe.id = '6RBmf85SJ0IFIO51kKfd';
                            
                            // Additional mobile-specific handling
                            iframe.onload = () => {
                                console.log('Mobile iframe loaded successfully');
                                // Force a refresh if needed
                                setTimeout(() => {
                                    if (iframe.contentWindow) {
                                        try {
                                            iframe.contentWindow.postMessage('refresh', '*');
                                        } catch (e) {
                                            console.log('Cross-origin iframe, cannot refresh');
                                        }
                                    }
                                }, 1000);
                            };
                        }, 1000); // Longer delay for mobile
                    } else {
                        // Desktop: Standard loading
                        setTimeout(() => {
                            iframe.src = 'https://api.leadconnectorhq.com/widget/survey/6RBmf85SJ0IFIO51kKfd';
                            iframe.id = '6RBmf85SJ0IFIO51kKfd';
                        }, 300);
                    }
                }
            }, 100);
        });
    }
    if (closeButtonCalendar && calendarModalInstance) {
        closeButtonCalendar.addEventListener('click', () => {
            calendarModalInstance.classList.remove('opacity-100');
            setTimeout(() => calendarModalInstance.classList.add('hidden'), 300);
        });
    }
    window.addEventListener('keydown', (event) => {
        if (event.key === 'Escape' && calendarModalInstance && !calendarModalInstance.classList.contains('hidden')) {
            closeButtonCalendar?.click();
        }
    });
    if (calendarModalInstance) {
        calendarModalInstance.addEventListener('click', (event) => {
            if (event.target === calendarModalInstance) {
                closeButtonCalendar?.click();
            }
        });
    }

    // Load GoHighLevel form script and log when it loads
    const ghlScript = document.createElement('script');
    ghlScript.src = 'https://link.msgsndr.com/js/form_embed.js';
    ghlScript.async = true;
    ghlScript.onload = function() {
        console.log('GHL script loaded successfully');
    };
    ghlScript.onerror = function() {
        console.error('Failed to load GHL script');
    };
    document.head.appendChild(ghlScript);

    // Initialize spots count and location when page loads
    document.addEventListener('DOMContentLoaded', () => {
        if ((window as any).spotsManager) {
            (window as any).spotsManager.updateSpotsWithDate('spots-left-offer');
        }
        
        // Update city in offer section
        const userCityElement = document.getElementById('user-city-offer');
        
        // Fetch user location using ipinfo.io (same as hero section)
        fetch("https://ipinfo.io/json?token=ff316ef2f19f67")
            .then(response => response.json())
            .then(data => {
                if (userCityElement) {
                    userCityElement.textContent = data.city || "your area";
                }
            })
            .catch(error => {
                console.error("Error fetching location:", error);
                if (userCityElement) {
                    userCityElement.textContent = "your area";
                }
            });
    });
</script> 