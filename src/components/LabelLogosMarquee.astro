---
const labelLogos = [
    { src: "/label-logos/warner music.webp", alt: "Warner Music" },
    { src: "/label-logos/monstercat logo.webp", alt: "Monstercat" },
    { src: "/label-logos/HBO logo.webp", alt: "HBO" },
    { src: "/label-logos/atlantic logo.webp", alt: "Atlantic Records" },
    { src: "/label-logos/stmpd logo.webp", alt: "STMPD RCRDS" },
    { src: "/label-logos/Revealed Recordings logo.webp", alt: "Revealed Recordings" },
    { src: "/label-logos/Ultra Music Logo.webp", alt: "Ultra Music" },
    { src: "/label-logos/armada logo.webp", alt: "Armada Music" },
    { src: "/label-logos/rocket league logo.webp", alt: "Rocket League" }
];
---
<div class="w-full bg-gradient-to-b from-[#070710] to-[#0a0a16] py-8 md:py-12">
    <!-- Header text -->
    <div class="px-4 md:px-8 max-w-6xl mx-auto text-center mb-4 md:mb-8">
        <p class="text-xs md:text-sm text-gray-400 uppercase tracking-widest">LABELS WE'VE DIRECTLY WORKED WITH</p>
    </div>
    
    <!-- Marquee container -->
    <div class="marquee-container relative">
        <!-- Fade edges -->
        <div class="absolute left-0 top-0 bottom-0 w-16 md:w-32 bg-gradient-to-r from-[#070710] to-transparent z-10"></div>
        <div class="absolute right-0 top-0 bottom-0 w-16 md:w-32 bg-gradient-to-l from-[#070710] to-transparent z-10"></div>
        
        <!-- The marquee -->
        <div class="marquee">
            <!-- First set of logos -->
            <div class="marquee-group">
                {labelLogos.map(logo => (
                    <div class="marquee-item">
                        <img src={logo.src} alt={logo.alt} class="h-6 md:h-12 object-contain filter brightness-0 invert opacity-60 hover:opacity-100 transition-opacity duration-300" />
                    </div>
                ))}
            </div>
            
            <!-- Duplicate set for the seamless loop -->
            <div class="marquee-group" aria-hidden="true">
                {labelLogos.map(logo => (
                    <div class="marquee-item">
                        <img src={logo.src} alt={logo.alt} class="h-6 md:h-12 object-contain filter brightness-0 invert opacity-60 hover:opacity-100 transition-opacity duration-300" />
                    </div>
                ))}
            </div>
        </div>
    </div>
</div>

<style>
    .marquee-container {
        overflow: hidden;
        width: 100%;
        position: relative;
    }
    
    .marquee {
        display: flex;
        width: max-content;
    }
    
    .marquee-group {
        display: flex;
        animation: scroll 40s linear infinite;
    }
    
    .marquee-item {
        flex: 0 0 auto;
        padding: 0 20px;
    }
    
    @media (min-width: 768px) {
        .marquee-item {
            padding: 0 40px;
        }
    }
    
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-100%);
        }
    }
    
    /* Pause animation on hover */
    .marquee-container:hover .marquee-group {
        animation-play-state: paused;
    }
</style> 