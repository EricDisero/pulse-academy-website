---
// src/components/QuickTestimonial.astro
interface Props {
    name: string;
    photo: string;
    role: string;
    testimonial: string;
    outcome?: string;
    compact?: boolean;
}

const { name, photo, role, testimonial, outcome, compact = false } = Astro.props;
---

<div class={`testimonial-card bg-gradient-to-br from-[#080810]/60 to-[#0c0c18]/60 backdrop-blur-sm border border-gray-800/30 rounded-xl p-${compact ? '4' : '6'} transition-all duration-300 hover:border-pulse-purple/30 hover:shadow-lg hover:shadow-pulse-purple/10`}>
    <div class="flex items-start gap-4">
        <div class={`${compact ? 'w-12 h-12' : 'w-16 h-16'} rounded-full overflow-hidden border-2 border-pulse-purple/20 flex-shrink-0`}>
            <img src={photo} alt={name} class="w-full h-full object-cover" />
        </div>
        <div class="flex-1">
            <div class="mb-3">
                <h4 class={`${compact ? 'text-lg' : 'text-xl'} font-bold text-white`}>{name}</h4>
                <p class={`text-gray-400 ${compact ? 'text-xs' : 'text-sm'}`}>{role}</p>
            </div>
            <blockquote class={`text-gray-300 ${compact ? 'text-sm' : 'text-base'} leading-relaxed italic mb-3`}>
                "{testimonial}"
            </blockquote>
            {outcome && (
                <div class="bg-green-500/10 p-3 rounded-lg border border-green-500/20">
                    <p class="text-green-400 font-semibold text-sm">{outcome}</p>
                </div>
            )}
        </div>
    </div>
    
    <!-- 5-star rating -->
    <div class="flex items-center mt-4 pt-3 border-t border-gray-800/20">
        <div class="flex items-center">
            {[...Array(5)].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
            ))}
        </div>
        <span class="ml-2 text-sm text-gray-400">Verified Student</span>
    </div>
</div> 