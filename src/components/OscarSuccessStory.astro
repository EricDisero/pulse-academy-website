<style>
    .oscar-story-container {
        backdrop-filter: blur(20px);
        transition: all 0.3s ease;
    }

    .oscar-story-container:hover {
        border-color: rgba(139, 92, 246, 0.4);
        box-shadow: 0 25px 50px rgba(139, 92, 246, 0.1);
    }

    .spotify-container {
        perspective: 1000px;
    }

    .spotify-wrapper {
        transform-style: preserve-3d;
        transition: transform 0.3s ease;
    }

    .spotify-wrapper:hover {
        transform: rotateY(-8deg) rotateX(4deg) translateZ(20px);
    }

    .spotify-wrapper:hover + div {
        opacity: 0.8;
    }

    /* Glassmorphism effect for spotify container */
    .spotify-wrapper .bg-\[#191414\] {
        background: rgba(25, 20, 20, 0.9);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .spotify-wrapper:hover .bg-\[#191414\] {
        background: rgba(25, 20, 20, 0.95);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .spotify-wrapper:hover {
            transform: rotateY(-4deg) rotateX(2deg) translateZ(10px);
        }
    }
</style> 