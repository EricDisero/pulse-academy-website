---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section7Offer from '../components/Section7Offer.astro';

export interface Props {
    title: string;
    description?: string;
    publishDate?: string;
    author?: string;
}

const { title, description, publishDate, author } = Astro.props;
---

<Layout title={title}>
    <!-- Enhanced SEO Meta Tags -->
    <meta slot="head" name="description" content={description || "Expert insights on music production, mixing, and sound design from Pulse Academy"} />
    <meta slot="head" name="author" content={author || "Pulse Academy"} />
    {publishDate && <meta slot="head" name="article:published_time" content={publishDate} />}
    <meta slot="head" property="og:type" content="article" />
    <meta slot="head" property="og:title" content={title} />
    <meta slot="head" property="og:description" content={description || "Expert insights on music production, mixing, and sound design"} />
    <meta slot="head" property="article:author" content={author || "Pulse Academy"} />
    {publishDate && <meta slot="head" property="article:published_time" content={publishDate} />}
    <meta slot="head" name="twitter:card" content="summary_large_image" />
    <meta slot="head" name="twitter:title" content={title} />
    <meta slot="head" name="twitter:description" content={description || "Expert insights on music production, mixing, and sound design"} />
    
    <Header />
    
    <!-- Main Content -->
    <main>
        <slot />
        
        <!-- Include the offer section for CTAs -->
        <Section7Offer />
    </main>
    
    <Footer />
</Layout>

<style>
/* Blog-specific content styling - PROFESSIONAL TYPOGRAPHY */
.blog-content {
    @apply text-gray-100 leading-loose;
    font-size: 20px;
    line-height: 2;
    max-width: 100%;
    font-weight: 400;
}

.blog-content h1 {
    @apply text-5xl md:text-6xl lg:text-7xl font-black text-white leading-tight;
    margin: 0 0 3rem 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
}

.blog-content h2 {
    @apply text-4xl md:text-5xl font-bold text-white leading-tight;
    margin: 5rem 0 2.5rem 0;
    line-height: 1.2;
    padding-top: 3rem;
    border-top: 2px solid rgba(139, 92, 246, 0.2);
    letter-spacing: -0.01em;
}

.blog-content h2:first-of-type {
    border-top: none;
    padding-top: 0;
    margin-top: 3rem;
}

.blog-content h3 {
    @apply text-3xl md:text-4xl font-bold text-white leading-tight;
    margin: 4rem 0 2rem 0;
    line-height: 1.3;
    color: #f8fafc;
}

.blog-content h4 {
    @apply text-2xl md:text-3xl font-semibold text-white leading-tight;
    margin: 3rem 0 1.5rem 0;
    color: #e2e8f0;
}

.blog-content p {
    @apply leading-loose;
    font-size: 20px;
    line-height: 2;
    margin: 0 0 2.5rem 0;
    color: #f1f5f9;
    font-weight: 400;
}

.blog-content strong {
    @apply font-bold;
    font-weight: 700;
    color: #ffffff;
}

.blog-content em {
    @apply italic;
    color: #22d3ee;
    font-style: italic;
}

.blog-content ul, .blog-content ol {
    margin: 3rem 0;
    padding-left: 2.5rem;
    font-size: 20px;
    line-height: 2;
}

.blog-content li {
    margin-bottom: 1.5rem;
    line-height: 2;
    color: #f1f5f9;
}

.blog-content ul li {
    @apply list-disc;
}

.blog-content ol li {
    @apply list-decimal;
}

.blog-content blockquote {
    @apply border-l-4 border-pulse-purple bg-gray-900/50 rounded-r-lg italic;
    margin: 4rem 0;
    padding: 3rem;
    font-size: 22px;
    line-height: 1.8;
    color: #f8fafc;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(34, 211, 238, 0.05));
}

.blog-content a {
    @apply transition-colors underline;
    color: #22d3ee;
    font-weight: 500;
}

.blog-content a:hover {
    color: #8b5cf6;
}

.blog-content code {
    @apply bg-gray-900 rounded;
    color: #22d3ee;
    padding: 0.5rem 0.75rem;
    font-size: 18px;
    font-family: 'Monaco', 'Menlo', monospace;
}

.blog-content pre {
    @apply bg-gray-900 rounded-lg overflow-x-auto;
    margin: 3rem 0;
    padding: 2.5rem;
    font-size: 16px;
}

.blog-content img, .blog-content video {
    @apply rounded-lg shadow-2xl;
    margin: 4rem 0;
}

/* Much Better CTA Styling */
.blog-content .blog-cta {
    margin: 5rem 0;
    padding: 4rem 3rem;
    border-radius: 1rem;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(34, 211, 238, 0.05));
    border: 1px solid rgba(139, 92, 246, 0.3);
}

.blog-content .blog-cta h3 {
    margin: 0 0 1.5rem 0;
    font-size: 2rem;
    line-height: 1.3;
}

.blog-content .blog-cta h4 {
    margin: 0 0 1.5rem 0;
    font-size: 1.75rem;
    line-height: 1.3;
}

.blog-content .blog-cta p {
    margin: 0 0 2rem 0;
    font-size: 18px;
    line-height: 1.7;
    color: #e2e8f0;
}

/* Better paragraph spacing after headers */
.blog-content h2 + p,
.blog-content h3 + p,
.blog-content h4 + p {
    margin-top: 0;
}

/* Mobile improvements */
@media (max-width: 768px) {
    .blog-content {
        font-size: 18px;
        line-height: 1.9;
    }
    
    .blog-content p {
        font-size: 18px;
        line-height: 1.9;
        margin-bottom: 2rem;
    }
    
    .blog-content ul, .blog-content ol {
        font-size: 18px;
        line-height: 1.9;
        margin: 2.5rem 0;
    }
    
    .blog-content li {
        margin-bottom: 1.25rem;
    }
    
    .blog-content h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }
    
    .blog-content h2 {
        font-size: 2rem;
        margin: 3.5rem 0 2rem 0;
        padding-top: 2rem;
    }
    
    .blog-content h3 {
        font-size: 1.75rem;
        margin: 3rem 0 1.5rem 0;
    }
    
    .blog-content .blog-cta {
        margin: 3.5rem 0;
        padding: 2.5rem 2rem;
    }
    
    .blog-content .blog-cta h3 {
        font-size: 1.5rem;
    }
    
    .blog-content .blog-cta h4 {
        font-size: 1.25rem;
    }
}

/* Ultra-wide screen improvements */
@media (min-width: 1200px) {
    .blog-content {
        font-size: 21px;
    }
    
    .blog-content p {
        font-size: 21px;
        margin-bottom: 3rem;
    }
}
</style> 